<section id=quotations_list>
<h1>Lista de Orçamentos</h1>
<% if @quotations.any? %>
  <table>
      <thead>
      <tr>
        <th>Data do Orçamento:</th>
        <th>Previsão de Entrega:</th>
        <th>Peso:</th>
        <th>Altura:</th>
        <th>Largura:</th>
        <th>Profundidade:</th>
        <th>Distância:</th>
        <th>Preço:</th>
        <th>Transportadora:</th>
      </tr>  
      </thead>
      <tbody>
        <% @quotations.each do |q| %>
          <tr>
            <td><%= q.quotation_date%></td>
            <td><%= q.delivery_date %></td>
            <td><%= q.weight %></td>
            <td><%= q.height %></td>
            <td><%= q.width %></td>
            <td><%= q.depth %></td>
            <td><%= q.distance%></td>
            <td><%= q.shipping_price %></td>
            <td><%= q.carrier.brand_name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else  %>
    <p>Nenhum Orçamento cadastrado</p>
<% end %>
<hr>
<div>
  <%= link_to 'Home', root_path %>  | <%= link_to 'Cadastrar Orçamento', new_quotation_path %>
</div>

</section>