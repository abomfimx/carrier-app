<section id=vehicle_new>
<h1>Novo Ve√≠culo</h1>
    <% if(@vehicule.errors.any?) %>
    <p>Verifique os erros abaixo:</p>
    <ul>
      <% @vehicule.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_with(model: @vehicule) do |v| %>
  <div>
    <%= v.label :brand_name %>
    <%= v.text_field :brand_name %>
  </div>
  <div>
    <%= v.label :vehicle_model %>
    <%= v.text_field :vehicle_model %>
  </div>
  <div>
    <%= v.label :plate_number %>
    <%= v.text_field :plate_number %>
  </div>
  <div>
    <%= v.label :year %>
    <%= v.text_field :year %>
  </div>
  <div>
    <%= v.label :max_load %>
    <%= v.number_field :max_load %>
  </div>
  <div>
    <%= v.label :carrier_id %>
    <%= v.collection_select :carrier_id, @carriers, :id, :brand_name%>
  </div>
  <div>
    <%= v.submit 'Salvar' %>
  </div>

  <% end %>
  <hr>
  <div>
    <%= link_to 'Home', root_path %> | <%= link_to 'Voltar', vehicules_path %>
  </div>

</section>