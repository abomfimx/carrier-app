<section id=carrier_prices_list>
<h1>Lista de Preços</h1>

<% if @carrier_prices.any? %>
  <table>
    <thead>
    <tr>
      <th>Tabela:</th>
      <th>Volume mínimo:</th>
      <th>Volume máximo:</th>
      <th>Peso máximo:</th>
      <th>Peso máximo:</th>
      <th>Preço:</th>
      <th>Transportadora:</th>
    </tr>  
    </thead>
    <tbody>
      <% @carrier_prices.each do |c| %>
        <tr>
          <td><%= link_to c.band_name, edit_carrier_price_path(c.id)%></td>
          <td><%= c.min_volume %></td>
          <td><%= c.max_volume %></td>
          <td><%= c.min_weight %></td>
          <td><%= c.max_weight %></td>
          <td><%= c.price %></td>
          <td><%= c.carrier.brand_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else  %>
  <p>Nenhum Preço cadastrado</p>
<% end %>
<hr>
<div>
  <%= link_to 'Home', root_path %> | <%= link_to 'Cadastrar Preço', new_carrier_price_path %>
</div>

</section>